{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "../../components/packages/*/src"
      ],
      "@hoc/*": [
        "components/hoc/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    },
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noEmitOnError":false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
