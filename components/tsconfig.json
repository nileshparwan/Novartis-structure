{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "packages/*/src"
      ],
    },
    "types": [
      "jest"
    ],
    "target": "es2021",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ]
}